<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.NavigationDrawer;assembly=Syncfusion.Maui.NavigationDrawer"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:control="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:Class="ProjectMentorMatch.Views.Search"
             Shell.NavBarIsVisible="False"
             Title="Search">
    
    

    <syncfusion:SfNavigationDrawer x:Name="NavigationDrawer">
        <syncfusion:SfNavigationDrawer.DrawerSettings>
            <syncfusion:DrawerSettings ContentBackground="White" DrawerHeaderHeight="80" DrawerWidth="350" Position="Right">
                <syncfusion:DrawerSettings.DrawerHeaderView>
                    <HorizontalStackLayout HorizontalOptions="StartAndExpand">

                        <Label Text="Filter Search" 
                                FontSize="Large" 
                                FontAttributes="Bold" 
                                Margin="20,20"
                                TextColor="#086EBB">
                        </Label>
                    </HorizontalStackLayout>
                </syncfusion:DrawerSettings.DrawerHeaderView>
                <syncfusion:DrawerSettings.DrawerContentView>
                    <ScrollView Padding="10">
                        <StackLayout Spacing="10" Padding="10">
                            <!-- Gender Filter -->
                            <Label Text="Gender"
                                    TextColor="#086EBB"
                                    FontSize="Medium" 
                                    FontAttributes="Bold" 
                                    Margin="5">
                            </Label>

                            <StackLayout Spacing="30" Orientation="Horizontal" HorizontalOptions="Start" Margin="5,0,0,0">
                                <RadioButton Content="Male" GroupName="GenderGroup" CheckedChanged="OnGenderCheckedChanged" />
                                <RadioButton Content="Female" GroupName="GenderGroup" CheckedChanged="OnGenderCheckedChanged" />
                                <RadioButton Content="Non-binary" GroupName="GenderGroup" CheckedChanged="OnGenderCheckedChanged" />
                            </StackLayout>
                            <VerticalStackLayout>
                                <Label Text="Subject Preferences" 
                                       FontSize="Medium" 
                                       FontAttributes="Bold" 
                                       TextColor="#006EBB" 
                                       Margin="0,20,0,15" />
                                <material:MultiplePickerField 
                                  x:Name="academicSubjectsPicker"
                                  Title="Academic Subjects" 
                                  Icon="subject_icon.png" 
                                  Margin="0,5,0,5" 
                                  AccentColor="White" 
                                  WidthRequest="330"
                                  ItemsSource="{Binding Subjects.AvailableSub}"
                                  SelectedItems="{Binding Subjects.SelectedSub}">
                                </material:MultiplePickerField>

                                <material:MultiplePickerField 
                                          x:Name="nonAcademicSubjectsPicker"
                                          Title="Non-academic Subjects" 
                                          Icon="subject_icon.png" 
                                          Margin="0,5,0,5" 
                                          WidthRequest="330" 
                                          AccentColor="LightBlue"
                                          ItemsSource="{Binding Subjects.AvailableNonSub}"
                                          SelectedItems="{Binding Subjects.SelectedNonSub}">
                                </material:MultiplePickerField>

                                <Button Text="Display Selected Subjects" 
                                        Margin="0,10,0,10" 
                                        Command="{Binding Subjects.DisplaySelectedSubjectsCommand}" />

                                <Label Text="{Binding Subjects.SelectedSubjectsText}" FontSize="Medium" TextColor="Black" />
                                <Label Text="{Binding Subjects.SelectedNonSubjectsText}" FontSize="Medium" TextColor="Black" />
                            </VerticalStackLayout>

                            <!-- Day Filter -->
                            <Label Text="Schedule" 
                                    FontSize="Medium" 
                                    FontAttributes="Bold" 
                                    Margin="10,10,0,5"
                                    TextColor="#086EBB">
                            </Label>

                            <material:MultiplePickerField Title="Select Day" Margin="0,0,0,10" Icon="day_icon.png">
                                <material:MultiplePickerField.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Monday</x:String>
                                        <x:String>Tuesday</x:String>
                                        <x:String>Wednesday</x:String>
                                        <x:String>Thursday</x:String>
                                        <x:String>Friday</x:String>
                                        <x:String>Saturday</x:String>
                                        <x:String>Sunday</x:String>
                                    </x:Array>
                                </material:MultiplePickerField.ItemsSource>
                            </material:MultiplePickerField>

                            <!-- Preferred Setup Filter -->
                            <Label Text="Setup" 
                                    FontSize="Medium" 
                                    FontAttributes="Bold"
                                    Margin="10,10,0,5"
                                    TextColor="#086EBB">
                            </Label>

                            <StackLayout Spacing="60" Orientation="Horizontal" HorizontalOptions="Start" Margin="5,0,0,0">
                                <RadioButton Content="Face to Face" GroupName="SetupModeGroup" CheckedChanged="OnSetupModeCheckedChanged" />
                                <RadioButton Content="Online" GroupName="SetupModeGroup" CheckedChanged="OnSetupModeCheckedChanged" />
                            </StackLayout>

                            <StackLayout Spacing="66" Orientation="Horizontal" HorizontalOptions="Start" Margin="5,0,0,0">
                                <RadioButton Content="One-on-one" GroupName="InteractionModeGroup" CheckedChanged="OnInteractionModeCheckedChanged" />
                                <RadioButton Content="Group" GroupName="InteractionModeGroup" CheckedChanged="OnInteractionModeCheckedChanged" />
                            </StackLayout>
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="6" Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                <!-- Accept Button -->
                                <Button Text="Apply"  
                                        WidthRequest="200" 
                                        HeightRequest ="40" 
                                        HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </StackLayout>
                    </ScrollView>
                </syncfusion:DrawerSettings.DrawerContentView>
            </syncfusion:DrawerSettings>
        </syncfusion:SfNavigationDrawer.DrawerSettings>
        <syncfusion:SfNavigationDrawer.ContentView>
            <Grid RowDefinitions=".1*, .06*, *, .0*" Margin="0,20,0,0">
                <Label Grid.Column="1"
               FontSize="24"
               HorizontalTextAlignment="Start"
               Text="   Search"
               TextColor="#086EBB"
               FontAttributes="Bold"
               VerticalOptions="Start" />


                <Grid Padding="0,0,18,25">
                    <ImageButton Source="filter_icon.png"
                         Grid.Column="2"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         WidthRequest="25"
                         HeightRequest="25"
         Clicked="OnClickedFilter"/>
                </Grid>
                <Grid  Margin="0,34,0,0">
                    <VerticalStackLayout Padding="10,0,10,0">
                        <material:TextField Title="" Icon="search_icon.png" AllowClear="True">
                            <material:TextField.Attachments>
                                <Button Text="Search" />
                            </material:TextField.Attachments>
                        </material:TextField>
                    </VerticalStackLayout>
                </Grid>

                <ScrollView Grid.Row="2">
                    <VerticalStackLayout Padding="0,0,0,0">

                        <VerticalStackLayout Padding="0,7,0,0">
                            <material:TabView>
                                <material:TabItem Title="Mentor">
                                    <material:TabItem.ContentTemplate>
