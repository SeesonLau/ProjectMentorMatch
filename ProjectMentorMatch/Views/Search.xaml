                                                    </VerticalStackLayout>
                                                    <Grid Grid.Column="1" ColumnDefinitions="*, auto">
                                                        <VerticalStackLayout Padding="10,0,20,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <Label Text="Mentor 2" FontSize="16" FontAttributes="Bold" Grid.Column="0" />
                                                                <control:SfRating Precision="Exact" ItemCount="5" ItemSize="20" RatingShape="Star" Grid.Column="1">
                                                                    <control:SfRating.RatingSettings>
                                                                        <control:RatingSettings RatedFill="#FDDB19" UnratedStroke="#515151">

                                                                        </control:RatingSettings>
                                                                    </control:SfRating.RatingSettings>
                                                                </control:SfRating>
                                                            </Grid>
                                                            <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                                                       FontSize="14" 
                                                       TextColor="Gray"/>
                                                        </VerticalStackLayout>
                                                        <control:SfRating ItemCount="1" ItemSize="25" RatingShape="Heart" Grid.Column="1">
                                                            <control:SfRating.RatingSettings>
                                                                <control:RatingSettings RatedFill="#FF6069" UnratedStroke="#515151">

                                                                </control:RatingSettings>
                                                            </control:SfRating.RatingSettings>
                                                        </control:SfRating>
                                                    </Grid>

                                                </Grid>

                                                <!-- Mentor 3 -->
                                                <Grid ColumnDefinitions="auto, *, auto" Padding="0,0,10,10">
                                                    <Grid.BindingContext>
                                                        <x:String>Mentor 3</x:String>
                                                    </Grid.BindingContext>
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnClickedMentor" CommandParameter="{Binding .}"/>
                                                    </Grid.GestureRecognizers>
                                                    <VerticalStackLayout Padding="10,0,0,0">
                                                        <Image Source="circle_logo.png"
                                                   WidthRequest="60"
                                                   HeightRequest="60"
                                                   VerticalOptions="Center"/>
                                                    </VerticalStackLayout>
                                                    <Grid Grid.Column="1" ColumnDefinitions="*, auto">
                                                        <VerticalStackLayout Padding="10,0,20,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <Label Text="Mentor 3" FontSize="16" FontAttributes="Bold" Grid.Column="0" />
                                                                <control:SfRating Precision="Exact" ItemCount="5" ItemSize="20" RatingShape="Star" Grid.Column="1">
                                                                    <control:SfRating.RatingSettings>
                                                                        <control:RatingSettings RatedFill="#FDDB19" UnratedStroke="#515151">

                                                                        </control:RatingSettings>
                                                                    </control:SfRating.RatingSettings>
                                                                </control:SfRating>
                                                            </Grid>
                                                            <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                                                       FontSize="14" 
                                                       TextColor="Gray"/>
                                                        </VerticalStackLayout>
                                                        <control:SfRating ItemCount="1" ItemSize="25" RatingShape="Heart" Grid.Column="1">
                                                            <control:SfRating.RatingSettings>
                                                                <control:RatingSettings RatedFill="#FF6069" UnratedStroke="#515151">

                                                                </control:RatingSettings>
                                                            </control:SfRating.RatingSettings>
                                                        </control:SfRating>
                                                    </Grid>
                                                </Grid>
                                            </VerticalStackLayout>
                                        </DataTemplate>
                                    </material:TabItem.ContentTemplate>
                                </material:TabItem>


                                <material:TabItem Title="Mentee">
                                    <material:TabItem.ContentTemplate>
                                        <DataTemplate>
                                            <VerticalStackLayout>
                                                <!-- Mentee 1 -->
                                                <Grid ColumnDefinitions="auto, *, auto" Padding="0,20,0,10">
                                                    <Grid.BindingContext>
                                                        <x:String>Mentee 1</x:String>
                                                    </Grid.BindingContext>
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnClickedMentee" CommandParameter="{Binding .}"/>
