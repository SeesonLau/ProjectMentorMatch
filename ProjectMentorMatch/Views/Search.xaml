                                                    <Grid.BindingContext>
                                                        <x:String>Mentor 1</x:String>
                                                    </Grid.BindingContext>
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnClickedMentor" CommandParameter="{Binding .}"/>
                                                    </Grid.GestureRecognizers>
                                                    <VerticalStackLayout Padding="10,0,0,0">
                                                        <Image Source="circle_logo.png"
                                                   WidthRequest="60"
                                                   HeightRequest="60"
                                                   VerticalOptions="Center"/>
                                                    </VerticalStackLayout>
                                                    <Grid Grid.Column="1" ColumnDefinitions="*, auto">
                                                        <VerticalStackLayout Padding="10,0,20,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <Label Text="Mentor 1" FontSize="16" FontAttributes="Bold" Grid.Column="0" />
                                                                <control:SfRating Precision="Exact" ItemCount="5" ItemSize="20" RatingShape="Star" Grid.Column="1">
                                                                    <control:SfRating.RatingSettings>
