                                                    <VerticalStackLayout Padding="10,0,0,0">
                                                        <Image Source="circle_logo.png"
                                                   WidthRequest="60"
                                                   HeightRequest="60"
                                                   VerticalOptions="Center"/>
                                                    </VerticalStackLayout>
                                                    <Grid Grid.Column="1" ColumnDefinitions="*, auto">
                                                        <VerticalStackLayout Padding="10,0,20,0">
                                                            <Label Text="Mentee 1" FontSize="16" FontAttributes="Bold"/>
                                                            <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                                                       FontSize="14" 
                                                       TextColor="Gray"/>
                                                        </VerticalStackLayout>
                                                    </Grid>
                                                    <ImageButton Source="more_icon.png"
                                                     Grid.Column="2"
                                                     WidthRequest="24"
                                                     HeightRequest="24"
                                                     VerticalOptions="Center"/>
                                                </Grid>

                                                <!-- Mentee 2 -->
                                                <Grid ColumnDefinitions="auto, *, auto" Padding="0,0,0,10">
                                                    <Grid.BindingContext>
                                                        <x:String>Mentee 2</x:String>
                                                    </Grid.BindingContext>
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnClickedMentee" CommandParameter="{Binding .}"/>
                                                    </Grid.GestureRecognizers>
                                                    <VerticalStackLayout Padding="10,0,0,0">
                                                        <Image Source="circle_logo.png"
                                                   WidthRequest="60"
                                                   HeightRequest="60"
                                                   VerticalOptions="Center"/>
                                                    </VerticalStackLayout>
                                                    <Grid Grid.Column="1" ColumnDefinitions="*, auto">
                                                        <VerticalStackLayout Padding="10,0,20,0">
                                                            <Label Text="Mentee 2" FontSize="16" FontAttributes="Bold"/>
                                                            <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                                                       FontSize="14" 
                                                       TextColor="Gray"/>
                                                        </VerticalStackLayout>
                                                    </Grid>
                                                    <ImageButton Source="more_icon.png"
                                                     Grid.Column="2"
                                                     WidthRequest="24"
                                                     HeightRequest="24"
                                                     VerticalOptions="Center"/>
                                                </Grid>

                                                <!-- Mentee 3 -->
                                                <Grid ColumnDefinitions="auto, *, auto" Padding="0,0,0,10">
                                                    <Grid.BindingContext>
                                                        <x:String>Mentee 3</x:String>
                                                    </Grid.BindingContext>
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnClickedMentee" CommandParameter="{Binding .}"/>
                                                    </Grid.GestureRecognizers>
                                                    <VerticalStackLayout Padding="10,0,0,0">
                                                        <Image Source="circle_logo.png"
                                                   WidthRequest="60"
                                                   HeightRequest="60"
                                                   VerticalOptions="Center"/>
                                                    </VerticalStackLayout>
                                                    <Grid Grid.Column="1" ColumnDefinitions="*, auto">
                                                        <VerticalStackLayout Padding="10,0,20,0">
                                                            <Label Text="Mentee 3" FontSize="16" FontAttributes="Bold"/>
                                                            <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                                                       FontSize="14" 
                                                       TextColor="Gray"/>
                                                        </VerticalStackLayout>
                                                    </Grid>
                                                    <ImageButton Source="more_icon.png"
                                                     Grid.Column="2"
                                                     WidthRequest="24"
                                                     HeightRequest="24"
                                                     VerticalOptions="Center"/>
                                                </Grid>
                                            </VerticalStackLayout>
                                        </DataTemplate>
                                    </material:TabItem.ContentTemplate>
                                </material:TabItem>
                            </material:TabView>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </syncfusion:SfNavigationDrawer.ContentView>
    </syncfusion:SfNavigationDrawer>
</ContentPage>