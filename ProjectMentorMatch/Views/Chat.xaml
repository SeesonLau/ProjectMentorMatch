                    <Label Text="Mentor 2" FontSize="16" FontAttributes="Bold"/>
                    <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                           FontSize="14" 
                           TextColor="Gray"/>
                </VerticalStackLayout>
                <ImageButton Source="more_vert_icon.png"
                             Grid.Column="2"
                             WidthRequest="24"
                             HeightRequest="24"
                             VerticalOptions="Center"/>
            </Grid>

            <!-- Chat 3 -->
            <Grid ColumnDefinitions="auto, *, auto" Padding="0,0,0,10">
                <Grid.BindingContext>
                    <x:String>Mentor 3</x:String>
                </Grid.BindingContext>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChatClicked" CommandParameter="{Binding .}"/>
                </Grid.GestureRecognizers>
                <Image Source="chat_placeholder.png"
                       WidthRequest="50"
                       HeightRequest="50"
                       VerticalOptions="Center"/>
                <VerticalStackLayout Grid.Column="1" Spacing="2">
                    <Label Text="Mentor 3" FontSize="16" FontAttributes="Bold"/>
                    <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                           FontSize="14" 
                           TextColor="Gray"/>
                </VerticalStackLayout>
                <ImageButton Source="more_vert_icon.png"
                             Grid.Column="2"
                             WidthRequest="24"
                             HeightRequest="24"
                             VerticalOptions="Center"/>
            </Grid>

            <!-- Chat 4 -->
            <Grid ColumnDefinitions="auto, *, auto" Padding="0,0,0,10">
                <Grid.BindingContext>
                    <x:String>Mentor 4</x:String>
                </Grid.BindingContext>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChatClicked" CommandParameter="{Binding .}"/>
                </Grid.GestureRecognizers>
                <Image Source="chat_placeholder.png"
                       WidthRequest="50"
                       HeightRequest="50"
                       VerticalOptions="Center"/>
                <VerticalStackLayout Grid.Column="1" Spacing="2">
                    <Label Text="Mentor 4" FontSize="16" FontAttributes="Bold"/>
                    <Label Text="Supporting line text lorem ipsum dolor sit amet, consectetur."
                           FontSize="14" 
                           TextColor="Gray"/>
                </VerticalStackLayout>
                <ImageButton Source="more_vert_icon.png"
                             Grid.Column="2"
                             WidthRequest="24"
                             HeightRequest="24"
                             VerticalOptions="Center"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
