<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectMentorMatch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectMentorMatch"
    Title="ProjectMentorMatch">


    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Label Text="Mentor-Mentee App" Style="{StaticResource Headline}" />
            <Label Text="PRE-ALPHA BUILD v0.0.1" Style="{StaticResource SubHeadline}" FontSize="16" />
            <Image BackgroundColor="Gray" Source="dotnet_bot.png"></Image>

        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <VerticalStackLayout>

            <Image WidthRequest="100" Source="dotnet_bot.png"></Image>
            <Label Text="Test" HorizontalTextAlignment="Center"></Label>

        </VerticalStackLayout>
    </Shell.FlyoutFooter>

    <FlyoutItem  FlyoutDisplayOptions="AsMultipleItems">



    </FlyoutItem>


         


  
    
       

</Shell>
